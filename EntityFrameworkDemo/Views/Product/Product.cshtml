@model IEnumerable<product>
    @{
    ViewData["Title"] = "Product";
}
    <h2>Product</h2>
    <h4>Product</h4>
    <hr />

    <div>
        <a asp-action="ProductCreate" class="btn btn-primary">Add New Product</a>
    </div>
    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Cost Students</th>
                    <th>Stock</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null){
                <tr>
                    <td colspan="7" class="text-center">No Data Found</td>
                </tr>
                }
                else{
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.ProductName</td>
                            <td>@item.ProductDescription</td>
                            <td>@item.ProductCost</td>
                            <td>@item.Stock</td>
                            <td>
                                <a asp-action="ProductUpdate" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                            </td>
                            <td>
                                <form asp-action="ProductDelete" method="post" asp-route-id="@item.Id">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
